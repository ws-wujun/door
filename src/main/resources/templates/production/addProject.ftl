		      "/door/modifyProjects", 
		      { 
		        "projectId": ${project.projectId!''},
		        "projectName": projectName, 
		        "chargerNames": chargerNames, 
		        "projectDes": projectDes, 
		        "projectValid": isValid 
		      },
		      function (data) {
		        if (data == "ok") {
		          alert("操作成功！");
		        }
		      }
		    );
		}
    });
    </script>
    
